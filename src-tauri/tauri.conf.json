{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "bill-insight",
    "version": "1.0.0",
    "identifier": "com.newtun.billinsight",
    "build": {
        "frontendDist": "../dist/BillInsight/browser",
        "devUrl": "http://localhost:4200",
        "beforeDevCommand": "ng s",
        "beforeBuildCommand": "ng build"
    },
    "app": {
        "windows": [
            {
                "title": "bill-insight",
                "width":  450,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "center": true
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/**", "$LOCALDATA/**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "android": {
            "minSdkVersion": 24,
            "versionCode": 1
        }
    }
}
